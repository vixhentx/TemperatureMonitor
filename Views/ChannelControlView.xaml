<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TemperatureMonitor.Views.ChannelControlView"
             x:Name="this">
    <Frame WidthRequest="120" HeightRequest="80" HasShadow="True" Margin="10" Padding="8" CornerRadius="5">
        <Grid>
            <Label Text="{Binding Name}" HorizontalOptions="Start" VerticalOptions="Start"/>
            <Ellipse StrokeThickness="0" Fill="{Binding Color}" HorizontalOptions="End" VerticalOptions="End" Margin="5" HeightRequest="30" WidthRequest="30"/>
        </Grid>
    </Frame>
</ContentView>
